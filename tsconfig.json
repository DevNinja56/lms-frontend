{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "@pages/*": [
        "pages/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@route/*": [
        "Routes/*"
      ],
      "@slices/*": [
        "redux/slices/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@constant/*": [
        "constant/*"
      ],
      "@actions/*": [
        "redux/actions/*"
      ],
      "@context/*": [
        "context/*"
      ],
    }
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}